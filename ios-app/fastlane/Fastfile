default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    # Increment build number
    increment_build_number(xcodeproj: "GrantsAssist.xcodeproj")

    # Build the app
    build_app(
      scheme: "GrantsAssist",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "GrantsAssist.ipa"
    )

    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      apple_id: ENV["APPLE_ID"],
      app_identifier: "com.grantsassist.app"
    )
  end

  desc "Build for App Store release"
  lane :release do
    # Increment version number
    increment_version_number(xcodeproj: "GrantsAssist.xcodeproj")
    increment_build_number(xcodeproj: "GrantsAssist.xcodeproj")

    # Build the app
    build_app(
      scheme: "GrantsAssist",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "GrantsAssist.ipa"
    )

    # Upload to App Store Connect
    upload_to_app_store(
      skip_screenshots: true,
      skip_metadata: true,
      precheck_include_in_app_purchases: false
    )
  end

  desc "Run tests"
  lane :test do
    run_tests(
      scheme: "GrantsAssistTests",
      devices: ["iPhone 16 Pro"]
    )
  end

  desc "Sync certificates and profiles"
  lane :sync_certs do
    match(type: "appstore", readonly: true)
    match(type: "development", readonly: true)
  end
end
